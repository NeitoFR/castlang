---
import Layout from '../layouts/Layout.astro';
import AudioList from '../components/AudioList.astro';
import DownloadForm from '../components/DownloadForm.astro';
---

<Layout title="CastLang - Audio Manager">
	<main class="container mx-auto px-4 py-8">
		<h1 class="text-4xl font-bold text-center mb-8">CastLang Audio Manager</h1>
		
		<div class="grid gap-8">
			<section class="bg-white rounded-lg shadow-md p-6">
				<h2 class="text-2xl font-semibold mb-4">Download New Audio</h2>
				<DownloadForm />
			</section>

			<section class="bg-white rounded-lg shadow-md p-6">
				<h2 class="text-2xl font-semibold mb-4">Available Audio Files</h2>
				<AudioList />
			</section>
		</div>
	</main>
</Layout>

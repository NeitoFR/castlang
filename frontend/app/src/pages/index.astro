---
import Layout from '../layouts/Layout.astro';
import PodcastMaster from '../components/PodcastMaster.astro';
import PodcastDetails from '../components/PodcastDetails.astro';
---

<Layout title="CastLang - Podcast Streaming Platform">
	<main class="min-h-screen bg-gray-100">
		<div class="flex h-screen">
			<!-- Master Panel (Left Sidebar) -->
			<div class="w-1/3 bg-white shadow-lg border-r border-gray-200 flex flex-col">
				<div class="flex-shrink-0 p-6 border-b border-gray-200 bg-gradient-to-r from-indigo-600 to-purple-600">
					<h1 class="text-2xl font-bold text-white mb-2">CastLang</h1>
					<p class="text-indigo-100 text-sm">Your Personal Podcast Library</p>
				</div>
				<PodcastMaster />
			</div>
			
			<!-- Details Panel (Right Main Area) -->
			<div class="flex-1 flex flex-col">
				<PodcastDetails />
			</div>
		</div>
	</main>
</Layout>

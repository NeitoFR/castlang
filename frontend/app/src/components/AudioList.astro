<div id="audioList" class="space-y-4">
  <p class="text-gray-500 text-center">Loading audio files...</p>
</div>

<script>
  const audioList = document.getElementById('audioList');
  
  async function loadAudioFiles() {
    if (!audioList) return;
    
    try {
      const response = await fetch('http://localhost:8000/audio-files');
      const audioFiles = await response.json();
      
      if (audioFiles.length === 0) {
        audioList.innerHTML = '<p class="text-gray-500 text-center">No audio files available.</p>';
        return;
      }

      audioList.innerHTML = `
        <ul class="divide-y divide-gray-200">
          ${audioFiles.map((file: { filename: string; path: string }) => `
            <li class="py-4 flex items-center justify-between">
              <div class="flex items-center">
                <svg class="h-6 w-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3" />
                </svg>
                <span class="ml-3 text-gray-900">${file.filename}</span>
              </div>
              <a
                href="http://localhost:8000/${file.path}"
                download
                class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
              >
                Download
              </a>
            </li>
          `).join('')}
        </ul>
      `;
    } catch (error) {
      console.error('Error loading audio files:', error);
      audioList.innerHTML = '<p class="text-red-500 text-center">Failed to load audio files. Please try again later.</p>';
    }
  }

  // Load audio files when the component mounts
  loadAudioFiles();
</script> 